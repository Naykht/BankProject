<Window x:Class="BankManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankManager"
        mc:Ignorable="d"
        Title="" Height="250" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Padding="10 5" Grid.Row="0" Background="Aquamarine" Click="Button_Click">Log In</Button>
        <TextBox Grid.Row="1" Text="{Binding ElementName=sValue, Path=Value, UpdateSourceTrigger=PropertyChanged}"/>
        <Slider Grid.Row="2" Maximum="5000000" TickFrequency="1000" IsSnapToTickEnabled="True" Name="sValue"/>
    </Grid>
</Window>
