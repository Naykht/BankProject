<Window x:Class="BankManager.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankManager"
        mc:Ignorable="d"
        Title="TransactionWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="AccId" HorizontalAlignment="Center" VerticalAlignment="Center">Account Id:</TextBlock>
        <DataGrid Name="TranData" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding TranId}"></DataGridTextColumn>
                <DataGridTextColumn Width="70" Header="Amount, $" Binding="{Binding Amount}"></DataGridTextColumn>
                <DataGridTextColumn Header="From Account, Id" Binding="{Binding From}"></DataGridTextColumn>
                <DataGridTextColumn Header="To Account, Id" Binding="{Binding To}"></DataGridTextColumn>
                <DataGridTextColumn Width="125" Header="Date" Binding="{Binding Date}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
